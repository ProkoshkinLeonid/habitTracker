{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "module": "es6",
    "lib": ["ES6", "DOM"],
    "target": "es6",
    "esModuleInterop": false,
    "jsx": "react",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./bundle",
    "rootDir": "src",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@images/*": ["src/assets/images/*"],
      "@type/*": ["src/types/*"],
      "@components/*": ["src/components/*"],
      "@providers/*": ["src/providers/*"],
      "@stores/*": ["src/stores/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"],
  "compileOnSave": true
}
