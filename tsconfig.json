{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./bundle",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ]
}
